{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true
  },
  "exclude": [
    "node_modules"
  ],
  "filesGlob": [
    "./app/**/*.ts",
    "./www/spec/**/*.ts",
    "!./node_modules/**/*.ts",
    "!./platforms/**/*.ts",
    "!./typings/**/*.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}
